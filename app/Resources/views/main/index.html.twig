{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="container-fluid ">

        <div id="commande">
            <h3>Commande</h3>
            {% for flashMessage in app.session.flashbag.get('nbr-billet') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('danger') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="well">
                {{ form_start(commandeForm) }}
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(commandeForm.dateEntree) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(commandeForm.dateEntree) }}
                        {{ form_errors(commandeForm.dateEntree) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(commandeForm.typeBillet) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(commandeForm.typeBillet, { 'attr':  {
                            'class': 'form-control',
                        }}) }}
                        {{ form_errors(commandeForm.typeBillet) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(commandeForm.quantite) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(commandeForm.quantite, { 'attr':  {
                            'class': 'form-control',
                        }}) }}
                        {{ form_errors(commandeForm.quantite) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(commandeForm.email) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(commandeForm.email, { 'attr':  {
                            'class': 'form-control',
                        }}) }}
                        {{ form_errors(commandeForm.email) }}
                    </div>

                </div>
                <div><input class="btn btn-primary" id = "next" type ="submit" value="Suivant"/></div>
                <div id ="renvoie"><a href="{{ path('renvoie') }}">Commande perdue ?</a></div>

                {{ form_end(commandeForm) }}
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>

{% endblock %}