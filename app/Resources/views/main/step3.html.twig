{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block title %} RÃ©capitulatif  {% endblock %}

{% block body %}

    {{ parent() }}

    <h2 class="text-center">{{ block('title') }}</h2>

<div class="container">
    <div id="step-3" class="">
        <div class="well">
            <div class="tab-content">
                <div class="table-responsive">
                    <table class="table table-hover table-condensed">
                        <thead class = entete>
                            <tr>
                                <th>Participant</th>
                                <th>Type de Billet</th>
                                <th>Tarif</th>
                            </tr>
                        </thead>
                        <tfoot class = footer >
                            <tr>
                                <td>Total</td>
                                <td></td>
                                <td> {{ commande.prixCommande }} </td>
                            </tr>
                        </tfoot>
                {% for info in info %}
                    <tbody>
                        <tr>
                            <td> {{ info.nom }} {{ info.prenom }} </td>
                            <td> {{ commande.typeBillet }}
                            <td> {{ info.tarif }} </td>
                        </tr>
                    </tbody>
                {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <form action="{{ path('order_checkout') }}" method="POST">
            <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key=  {{ token }}
                    data-amount="{{ commande.prixCommande * 100}}"
                    data-email= "{{ commande.email }}"
                    data-name="Paiement"
                    data-description="Billeterie du louvre"
                    data-locale="auto"
                    data-currency="eur">
            </script>
        </form>
    </div>
{% endblock %}


{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>

{% endblock %}