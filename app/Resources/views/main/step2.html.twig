{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block title %} Informations  {% endblock %}

{% block body %}

    {{ parent() }}

    <div class="container-fluid">
        <div id="commande" class="">
            <h3>{{ block('title') }}</h3>
            {% for flashMessage in app.session.flashbag.get('problem-age') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="well">
                {{ form_start(infoForm) }}

                <div class="form-group">
                    {% for infos in infoForm %}
                    <div class="col-sm-12">
                      {{ form_widget(infos) }}
                    </div>
                    {% endfor %}
                    <div>*Attention ! Si vous avez choisi un tarif réduit, vous devrez présenter votre carte étudiant ou équivalent à l'entrée.</div>
                </div>
                <input class="btn btn-primary" id = "next" type ="submit" value="Suivant"/></input>

                {{ form_end(infoForm) }}
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>

{% endblock %}