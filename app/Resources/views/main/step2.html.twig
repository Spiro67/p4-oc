{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block title %} Informations  {% endblock %}

{% block body %}

    {{ parent() }}

    <h2 class="text-center">{{ block('title') }}</h2>

    <div class="container">
        <div id="step-1" class="">
            {% for flashMessage in app.session.flashbag.get('problem-age') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="well">
                {{ form_start(infoForm) }}
                {% for infos in infoForm %}
                <div class="form-group">
                    <div class="col-sm-10">
                      {{ form_widget(infos) }}
                    </div>
                </div>
                {% endfor %}

                <input class="btn btn-primary" id = "next" type ="submit" value="Suivant"/></input>

                {{ form_end(infoForm) }}
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>

{% endblock %}