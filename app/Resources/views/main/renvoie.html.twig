{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block body %}

    {{ parent() }}

     <div class="container-fluid ">

        <div id="commande">
            <h3>Renvoie de commande</h3>
            <div class="well">
                {{ form_start(renvoieCommandeForm) }}
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(renvoieCommandeForm.dateEntree) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(renvoieCommandeForm.dateEntree) }}
                        {{ form_errors(renvoieCommandeForm.dateEntree) }}
