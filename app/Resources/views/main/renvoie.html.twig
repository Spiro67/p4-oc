                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(renvoieCommandeForm.email) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(renvoieCommandeForm.email, { 'attr':  {
                            'class': 'form-control',
                        }}) }}
                        {{ form_errors(renvoieCommandeForm.email) }}
                    </div>
                </div>
                <input class="btn btn-primary" id = "next" type ="submit" value="Rechercher"/></input>
                <div id ="renvoie"><a href="{{ path('homepage') }}">Retourner Ã  l'accueil</a></div>

                {{ form_end(renvoieCommandeForm) }}
            </div>
        </div>

     </div>

{% endblock %}

{% block javascripts %}
